comment "This is using to configure kernel"

config KERNEL
	bool "Enable building kernel"
	default y

# config console menu

if KERNEL

menu "console"

config CONSOLE
	bool "Enable console function"
	default n

config CMD_ABOUT
	depends on CONSOLE
	bool "Add about cmd to console support list"
	default n

config CMD_HELP
	depends on CONSOLE
	bool "Add help cmd to console support list"
	default n

config CMD_RUN
	depends on CONSOLE
	select EXECUTOR
	bool "Add run cmd to console support list"
	default n

config CMD_MOD
	depends on CONSOLE
	select MODINSTALLER
	bool "Add insmod and rmmod cmd to console support list"
	default n

endmenu

# config kernel menu

menu "kernel"

config TASK_STACK
	int "The size of thread task stack"
	default 1024

config MODULE
	bool "Enable loadable module support"
	option modules
	select FATFS
	select ELFPARSER
	select ENVIRONMENT

config LOADER
	depends on MODULE
	bool "Enable loader support"
	default n

config ENVIRONMENT
	bool "Build the environment of Loadable module"
	default n

config WORKQUEUE
	bool "Enable workqueue support"
	default y

endmenu

# config utilities menu

menu "utilities"

config UTILITIES
	bool "Enable utilities support"
	default n

config SYNCLOCK
	depends on UTILITIES
	bool "Enable sync lock function"
	 default y

config FILESTREAM
	depends on UTILITIES
	select FATFS
	bool "Enable file stream function"
	default n

config INIPARSER
	depends on UTILITIES
	select FILESTREAM
	bool "Enable ini file parser function"
	default n

config PINPARSER
	depends on UTILITIES
	select FATFS
	bool "Enable pin parser function"
	default n

config RCPARSER
	depends on UTILITIES
	select FILESTREAM
	bool "Enable resource script parser function"
	default n

config ELFLOADER
	depends on UTILITIES
	select FILESTREAM
	bool "Enable elf parser function"
	default n

config EXECUTOR
	depends on UTILITIES
	bool "Enable execute program function"
	default n

config LIBMANAGER
	depends on UTILITIES
	bool "Enable library manager function"
	default n

config MODMANAGER
	depends on UTILITIES
	bool "Enable module manager function"
	default n

config BRIDGE
	depends on UTILITIES
	bool "Enable the bridge from kernel to user"
	default n

config REGEX
	depends on UTILITIES
	bool "Enable regex function"
	default n

endmenu

endif
