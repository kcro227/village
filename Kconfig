comment "This is using to configure kernel"

# config console menu

menu "console"

config CONSOLE
	bool "Enable console function"
	default n

config CMD_ABOUT
	depends on CONSOLE
	bool "Add about cmd to console support list"
	default n

config CMD_HELP
	depends on CONSOLE
	bool "Add help cmd to console support list"
	default n

endmenu

# config kernel menu

menu "kernel"

config LOADER
	bool "Enable loadable module support"
	option modules
	select FATFS
	select ENVIRONMENT

config ENVIRONMENT
	bool "Build the environment of Loadable module running"
	default n

endmenu

# config utilities menu

menu "utilities"

config UTILITIES
	bool "Enable utilities support"
	default n

config FILESTREAM
	depends on UTILITIES
	select FATFS
	bool "Enable file stream function"
	default n

config INIPARSER
	depends on UTILITIES
	select FATFS
	bool "Enable ini file parser function"
	default n

config PINPARSER
	depends on UTILITIES
	select FATFS
	bool "Enable pin parser function"
	default n

endmenu

# config  libraries menu

menu "libraries"

config FATFS
	depends on SDCARD || SPIFLASH
	bool "Enable fatfs file system"
	default n

endmenu
