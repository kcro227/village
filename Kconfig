comment "This is using to configure kernel"

config KERNEL
	bool "Enable building kernel"
	default y

# config console menu

if KERNEL

menu "console"

config CONSOLE
	bool "Enable console function"
	default n

config CMD_ABOUT
	depends on CONSOLE
	bool "Add about cmd to console support list"
	default n

config CMD_HELP
	depends on CONSOLE
	bool "Add help cmd to console support list"
	default n

endmenu

# config kernel menu

menu "kernel"

config TASK_STACK
	int "The size of thread task stack"
	default 1024

config MODULE
	bool "Enable loadable module support"
	option modules
	select FATFS
	select ELFPARSER
	select ENVIRONMENT

config LOADER
	depends on MODULE
	bool "Enable loader support"
	default n

config ENVIRONMENT
	bool "Build the environment of Loadable module"
	default n

config EXECUTOR
	depends on LOADER
	bool "Enable executor support"
	default n

config WORKQUEUE
	bool "Enable workqueue support"
	default y

endmenu

# config utilities menu

menu "utilities"

config UTILITIES
	bool "Enable utilities support"
	default n

config FILESTREAM
	depends on UTILITIES
	select FATFS
	bool "Enable file stream function"
	default n

config INIPARSER
	depends on UTILITIES
	select FILESTREAM
	bool "Enable ini file parser function"
	default n

config PINPARSER
	depends on UTILITIES
	select FATFS
	bool "Enable pin parser function"
	default n

config RCPARSER
	depends on UTILITIES
	select FILESTREAM
	bool "Enable resource script parser function"
	default n

config ELFPARSER
	depends on UTILITIES
	select FILESTREAM
	bool "Enable elf parser function"
	default n

endmenu

endif
